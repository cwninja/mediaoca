<div id="currently_playing" class="<%= "playing" if @currently_playing %>">
  <% if @currently_playing %>
    <span style="float: right">
        <%= link_to_remote "stop", :url => {:controller => :episodes, :action => "stop"} %>
        <%= link_to_remote( (@paused ? "resume" : "pause"), :url => {:controller => :episodes, :action => "pause"}) %>
    </span>
    Playing: <%= h @currently_playing %>
  <% else %>
    idle...
  <% end %>
  
</div>
