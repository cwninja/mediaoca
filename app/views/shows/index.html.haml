.box
  %h1 Listing shows
  %table
    %tr
      %th Name
    - for show in @shows
      %tr
        %td= h show.name
        %td= link_to 'Show', show
        %td= link_to 'Edit', edit_show_path(show)
        %td= link_to 'Destroy', show, :confirm => 'Are you sure?', :method => :delete
  = link_to 'New show', new_show_path
