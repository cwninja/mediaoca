.box
  %h1 Listing shows
  - for show in @shows
    .show
      %h2= h show.name
      .options
        = link_to 'Show', show
        = link_to 'Edit', edit_show_path(show)
      - if show.episodes.latest
        %ul= render :partial => "episodes/episode", :object => show.episodes.latest
  .options
    = link_to 'New show', new_show_path
